{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist/js",
      "rootDir": "api",
      "strict": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["api/**/*"],
    "exclude": ["api/types/*.ts", "node_modules", ".vscode", ".idea"]
  }